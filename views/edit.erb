<div>
	<form action="/tasks/<%= @task.id %>" method="post">
		<div>
			<div>
				<input type="text" name="title" placeholder="タイトル" value="<%= CGI.escapeHTML(@task.title) %>"><br>
				<input type="date" name="due_date" placeholder="〆切" value="<%= @task_due_date %>"><br>
				リスト：
				<select name="list">
					<% List.all.each do |list| %>
						<option value="<%= list.id %>"><%=list.name%></option>
					<% end %>
				</select>
			</div>
			<div>
				<input type="submit" value="登録">
			</div>
		</div>
	</form>
</div>
